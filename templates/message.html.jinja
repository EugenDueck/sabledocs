<h5 class="title is-5">
  <a href="#message-{{ message.full_name }}" id="message-{{ message.full_name }}">Message <code title="{{ message.full_name }}">{{ message.name }}</code></a>
</h5>
<p>{{ description }}</p>
<!-- <h6 class="title is-6">Fields</h6> -->
<table class="table">
  <thead>
    <tr>
      <th>Field</th>
      <th>Type</th>
      <th>Description</th>
      <th>Default Value</th>
    </tr>
  </thead>
  <tbody>
    {% for field in message.fields %}
    <tr>
      <td><code>{{ field.name }}</code></td>
      <td><code title="{{ field.full_type }}">{{ field.type }}</code></td>
      <td>{{ field.description }}</td>
      <td>{{ field.default_value }}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
